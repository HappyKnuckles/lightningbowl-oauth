# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database

# Session Management
SESSION_SECRET=your-long-random-session-secret-here

# Encryption Key for Refresh Tokens (32 bytes hex)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OneDrive OAuth Configuration
ONEDRIVE_CLIENT_ID=your-onedrive-client-id
ONEDRIVE_CLIENT_SECRET=your-onedrive-client-secret

# Dropbox OAuth Configuration
DROPBOX_CLIENT_ID=your-dropbox-app-key
DROPBOX_CLIENT_SECRET=your-dropbox-app-secret

# Backend URL (for OAuth callbacks)
BACKEND_URL=https://oauth.lightningbowl.de

# Allowed CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://lightningbowl.de,https://test.lightningbowl.de,http://localhost:8100

{
  "outputDirectory": null,
  "rewrites": [
    { "source": "/google-drive/:path*", "destination": "/api/google-drive/:path*" },
    { "source": "/onedrive/:path*", "destination": "/api/onedrive/:path*" },
    { "source": "/dropbox/:path*", "destination": "/api/dropbox/:path*" },
    { "source": "/health", "destination": "/api/health" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
